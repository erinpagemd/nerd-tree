html
  head
    meta(name='viewport' content='width=device-width, initial-scale=1')
    link(rel='stylesheet' href='css/bootstrap.min.css' type='text/css')
    link(rel='stylesheet' href='css/main.css' type='text/css')
    title Nerd Tree <3

  body
    
    //- navbar
    nav.navbar.navbar-default.navbar-fixed-top
      .container-fluid
        .navbar-header
          a.navbar-brand(href='#')
            img.img-circle(alt='brand' src='../img/nerdtreebrand.png')
        form.navbar-form.navbar-right
          .form-group
            button.btn.btn-default.navbar-btn(type='button') Sign In
            button.btn.btn-default.navbar-btn(type='button') Sign Up

    
    //- pretty h1 and tree img
    .brand-land
      h1.brand-body Nerd Tree
      .row
        .col-md-4.col-md-offset-4
          //- try to make the image a heart
          img.img-circle(alt='data tree' src='../img/actualtree.png')
    
    script(type='text/javascript' src='vendor/jquery.js')
